# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 88

[*.py]
indent_size = 2
max_line_length = 88

[*.{yml,yaml}]
indent_size = 2
max_line_length = 120

[*.{json,js,ts}]
indent_size = 2
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{toml,cfg,ini}]
indent_size = 2
max_line_length = 120

[Makefile]
indent_style = tab
indent_size = 4

[*.{sh,bash}]
indent_size = 2
max_line_length = 100
