{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [88],
  "editor.trimAutoWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "files.encoding": "utf8",
  "python.defaultInterpreterPath": "./venv/bin/python",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "[python]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.rulers": [88]
  },
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.rulers": [120]
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.rulers": [100]
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.rulers": [100]
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.rulers": [100]
  },
  "[markdown]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.rulers": [80],
    "files.trimTrailingWhitespace": false
  },
  "[toml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.rulers": [120]
  },
  "[ini]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.rulers": [120]
  },
  "[cfg]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.rulers": [120]
  },
  "[makefile]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.detectIndentation": false
  },
  "[shell]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.rulers": [100]
  },
  "[bash]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.rulers": [100]
  }
}
